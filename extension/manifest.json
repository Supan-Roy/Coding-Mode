{
  "manifest_version": 3,
  "name": "Coding Mode â€“ Try First Before You Ask AI",
  "description": "Temporarily block AI chat sites during coding sessions; optional TOTP unlock.",
  "version": "1.0.0",
  "permissions": ["storage", "declarativeNetRequest", "alarms", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Coding Mode"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js", "assets/blocked.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
